 <%= link_to "#{l(:gitrevision_download_revdownload)} #{@rev}", 
              {:controller => 'gitrevision_download', :project_id => @project.identifier, :repository_id => @repository.identifier, :rev => @rev},
              { :class => "icon icon-save", :rel => 'nofollow', :title => "#{l(:gitrevision_download_revdownload)} #{@rev}" } %>
<% end %>
<% end %>
